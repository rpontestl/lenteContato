<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginStart="85dp"
        android:text="L"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftUses" />

    <Button
        android:id="@+id/decreaseRight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="81dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/increaseRight" />

    <EditText
        android:id="@+id/rightUses"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="85dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/increaseLeft"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="42dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftUses" />

    <Button
        android:id="@+id/decreaseLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="47dp"
        android:text="-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/increaseLeft" />

    <EditText
        android:id="@+id/leftUses"
        android:layout_width="82dp"
        android:layout_height="46dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="242dp"
        android:layout_height="159dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="85dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/increaseRight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="81dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rightUses" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginEnd="84dp"
        android:text="R"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rightUses" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="141dp"
        android:ems="10"
        android:inputType="date"
        android:text="12/04/2020"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>